<Project>
  <PropertyGroup>
    <VersionPrefix>0.0.1</VersionPrefix>
    <Copyright>Copyright (c) 2024 Berten Vandebroek</Copyright>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)TeamsStatusMqttPub.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>True</SignAssembly>
    <PackageId>$(AssemblyName)</PackageId>
    <Features>strict</Features>
    <Authors>Berten Vandebroek</Authors>
    <Product>Teams Status MQTT Pub</Product>
    <Company>https://www.github.com/bertenvdb/TeamsStatusMqttPub</Company>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <Deterministic>true</Deterministic>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>
</Project>
